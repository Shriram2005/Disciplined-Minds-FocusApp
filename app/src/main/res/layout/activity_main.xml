<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/app_logo"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DisciplinedMinds"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay focused, achieve more"
                android:textSize="14sp"
                android:textColor="@color/darkgrey" />

        </LinearLayout>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Blocking Status"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvBlockingStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inactive"
                        android:textSize="14sp"
                        android:textColor="@color/red" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivStatusIndicator"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_error"
                    android:tint="@color/red" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Timer Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus Timer"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <!-- Timer Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvTimerDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="monospace" />

                </LinearLayout>

                <!-- Timer Duration Selection -->
                <LinearLayout
                    android:id="@+id/layoutTimerControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Duration"
                        android:textSize="14sp"
                        android:textColor="@color/darkgrey"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/btn30Min"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="30min"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded"
                            android:backgroundTint="@color/light_gray"
                            android:textColor="@color/black"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn60Min"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="1hr"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded"
                            android:backgroundTint="@color/light_gray"
                            android:textColor="@color/black"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn90Min"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="1.5hr"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded"
                            android:backgroundTint="@color/light_gray"
                            android:textColor="@color/black"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btn120Min"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="2hr"
                            android:textSize="12sp"
                            android:background="@drawable/button_rounded"
                            android:backgroundTint="@color/light_gray"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <!-- Timer Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnStartTimer"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Start Timer"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/button_rounded"
                            android:backgroundTint="@color/darkgreen"
                            android:layout_marginEnd="8dp" />

                        <Button
                            android:id="@+id/btnStopTimer"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Stop Timer"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:background="@drawable/button_rounded"
                            android:backgroundTint="@color/red"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Active Timer Controls (shown when timer is running) -->
                <LinearLayout
                    android:id="@+id/layoutActiveTimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnExtendTimer"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="+15 min"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/button_rounded"
                        android:backgroundTint="@color/color_yellow"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnStopActiveTimer"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Stop Timer"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/button_rounded"
                        android:backgroundTint="@color/red" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Actions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnAppLock"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Manage App Blocking"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="12dp"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>