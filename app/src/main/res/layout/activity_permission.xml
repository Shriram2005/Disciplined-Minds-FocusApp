<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey50"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/app_logo"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Permissions"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DisciplinedMinds needs these permissions to help you stay focused and block distracting apps."
                android:textSize="16sp"
                android:textColor="@color/darkgrey"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

        <!-- Usage Access Permission -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUsageAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_usage_stats"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usage Access"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Required"
                            android:textSize="12sp"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivUsageAccessStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_error" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allows the app to monitor which apps you're using so it can block distracting apps during focus sessions."
                    android:textSize="14sp"
                    android:textColor="@color/darkgrey"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnUsageAccess"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Grant Permission"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/colorPrimary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- System Alert Window Permission -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_overlay"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Display Over Other Apps"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Required"
                            android:textSize="12sp"
                            android:textColor="@color/red"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivOverlayStatus"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_error" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Allows the app to show blocking screens over other apps when you try to access restricted apps during focus time."
                    android:textSize="14sp"
                    android:textColor="@color/darkgrey"
                    android:lineSpacingMultiplier="1.2"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Grant Permission"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="@color/colorPrimary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Continue Button -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Continue to App"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button_rounded"
            android:backgroundTint="@color/darkgreen"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
